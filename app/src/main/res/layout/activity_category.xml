<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/searchcategory"
        android:hint="Введите категорию"
        android:textSize="@dimen/standard_text"
        android:layout_margin="@dimen/description_blank_margin"></EditText>

    <ListView
        android:id="@+id/categorylistview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/searchcategory"
        android:divider="@drawable/customdivider"
        android:layout_marginLeft="@dimen/description_blank_margin"
        android:layout_marginRight="@dimen/description_blank_margin" />
</RelativeLayout>
