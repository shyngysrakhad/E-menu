<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="match_parent"
    android:background="@drawable/dish_design">

    <LinearLayout
        android:id="@+id/firstlayout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginLeft="3dp">

        <ImageView
            android:id="@+id/foodphoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/secondlayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="vertical"
        android:layout_marginRight="3dp">

        <TextView
            android:id="@+id/text_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:fontFamily="serif"
            android:textSize="@dimen/standard_text"
            android:textStyle="bold"
            android:textColor="@android:color/holo_green_dark"
            android:textColorHighlight="@android:color/background_dark"
            android:text="Нет данных" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14dp"
                android:layout_weight="1"
                android:fontFamily="serif"
                android:textSize="@dimen/small_text"
                android:textStyle="italic"
                android:textColor="@android:color/holo_green_dark"
                android:textColorHighlight="@android:color/background_dark"
                android:text="Нет данных" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:text="В корзину">

            <LinearLayout
                android:id="@+id/count"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnremovecategory"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:fontFamily="sans-serif"
                    android:text="-"
                    android:textColor="@android:color/holo_green_light"
                    android:textSize="@dimen/small_text"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/amount"
                    android:layout_width="@dimen/amount_background_size"
                    android:layout_height="@dimen/amount_background_size"
                    android:layout_gravity="center"
                    android:fontFamily="serif"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@android:color/background_light"
                    android:textSize="@dimen/small_text"
                    android:textStyle="bold"
                    android:background="@drawable/circle" />

                <Button
                    android:id="@+id/btnadd"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:fontFamily="sans-serif"
                    android:text="+"
                    android:textColor="@android:color/holo_green_light"
                    android:textSize="@dimen/small_text"
                    android:textStyle="bold" />
            </LinearLayout>

            <Button
                android:id="@+id/basket"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="serif"
                android:text="В КОРЗИНУ"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="@dimen/small_text"
                android:textColor="@android:color/background_light"
                android:backgroundTint="@android:color/holo_green_light" />

            <Button
                android:id="@+id/indetail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="serif"
                android:text="ПОДРОБНО"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="@dimen/small_text"
                android:textColor="@android:color/background_light"
                android:layout_marginRight="5dp"
                android:backgroundTint="@android:color/holo_green_light" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>